config wifi-device 'radio0'
	option type 'mac80211'
	option hwmode '11g'
	option path 'platform/ar934x_wmac'
	option htmode 'HT20'
	option channel $radio0_channel
	option noscan '1'
	option disabled $radio0_disable

config wifi-iface
	option device 'radio0'
	option encryption 'none'
	option mode 'adhoc'
	option ssid $meshssid
	option bssid $bssid
	option mcast_rate '18000'
	option ifname $interface_ifname0
	option network $interface_name
	option hidden '1'
	option disabled $adhoc0_disable

config wifi-iface
	option device 'radio0'
	option mode 'ap'
	option ssid $ssid
	option encryption 'psk2'
	option key $wpa2key
	option network 'lan'
	option ieee80211r '1'
	option mobility_domain $mobility_domain
	option nasid 'meshmobility'
	option pmk_r1_push '1'
	option disabled $radio0_ap_disable
	option macfilter $macfilter
	list maclist $maclist
	option hidden $hide_ap_ssid

config wifi-device 'radio1'
	option type 'mac80211'
	option hwmode '11a'
	option path 'pci0000:00/0000:00:00.0'
	option channel $radio1_channel
	option htmode 'HT20'
	option noscan '1'
	option disabled $radio1_disable

config wifi-iface
	option device 'radio1'
	option encryption 'none'
	option mode 'adhoc'
	option ssid $meshssid
	option bssid $bssid
	option mcast_rate '18000'
	option ifname $interface_ifname1
	option network $interface_name
	option hidden '1'
	option disabled $adhoc1_disable

config wifi-iface
	option device 'radio1'
	option mode 'ap'
	option ssid $ssid
	option encryption 'psk2'
	option key $wpa2key
	option network 'lan'
	option ieee80211r '1'
	option mobility_domain $mobility_domain
	option nasid 'meshmobility'
	option pmk_r1_push '1'
	option disabled $radio1_ap_disable
	option macfilter $macfilter
	list maclist $maclist
	option hidden $hide_ap_ssid

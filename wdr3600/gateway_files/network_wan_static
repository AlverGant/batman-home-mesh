config interface 'loopback'
	option ifname 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config interface 'lan'
	option force_link '1'
	option type 'bridge'
	option proto 'static'
	option ipaddr $lan_ip
	option netmask $lan_netmask
	option ip6assign '60'
	option _orig_ifname 'eth0.1'
	option _orig_bridge 'true'
	option ifname 'bat0 eth0.1'
	option hostname $hostname
	option mtu '1500'

config interface 'wan'
	option ifname 'eth0.2'
	option proto 'static'
	option hostname $hostname
	option ipaddr '$wan_ip'
	option netmask '$wan_netmask'
	option gateway '$wan_gateway'

config interface 'wan6'
	option ifname 'eth0.2'
	option proto 'dhcpv6'

config switch
	option name 'switch0'
	option reset '1'
	option enable_vlan '1'

config switch_vlan
	option device 'switch0'
	option vlan '1'
	option ports '0t 2 3'

config switch_vlan
	option device 'switch0'
	option vlan '2'
	option ports '0t 1'

config interface $interface_name
	option mesh $interface_mesh_name
	option proto 'batadv'
	option mtu '1560'
	option 'routing_algo' '$batman_routing_algo'

config interface 'wired_mesh_port_4'
	option ifname 'eth0.5'
	option mtu '1560'
	option proto 'none'

config interface 'wired_mesh_port_3'
	option ifname 'eth0.4'
	option mtu '1560'
	option proto 'none'

config interface 'eth0'
	option ifname 'eth0'
	option mtu '1560'

config switch_vlan
	option device 'switch0'
	option vlan '5'
	option ports '0t 5'

config switch_vlan
	option device 'switch0'
	option vlan '4'
	option ports '0t 4'

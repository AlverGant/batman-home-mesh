config interface 'loopback'
	option ifname 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config interface 'lan'
	option force_link '1'
	option type 'bridge'
	option proto 'static'
	option ipaddr $lan_ip
	option netmask $lan_netmask
	option ip6assign '60'
	option _orig_ifname 'eth0.1'
	option _orig_bridge 'true'
	option ifname 'bat0 eth0.1'
	option hostname $hostname
	option mtu '1500'

config interface 'wan'
	option ifname 'eth0.2'
	option proto 'dhcp'
	option hostname $hostname
	option mtu '1500'

config interface 'wan6'
	option ifname 'eth0.2'
	option proto 'dhcpv6'

config switch
	option name 'switch0'
	option reset '1'
	option enable_vlan '1'

config switch_vlan
	option device 'switch0'
	option vlan '1'
	option ports '1 3 4 6t'

config switch_vlan
	option device 'switch0'
	option vlan '2'
	option ports '0 6t'

config interface $interface_name
	option mesh $interface_mesh_name
	option proto 'batadv'
	option mtu '1560'
	option 'routing_algo' '$batman_routing_algo'

# Mesh port VLAN 5, switch port 2, LAN 4
config interface 'wired_mesh'
	option ifname 'eth0.5'
	option mtu '1560'
	option proto 'none'

config interface 'eth0'
	option ifname 'eth0'
	option mtu '1560'

# Mesh VLAN 5, switch port 2, LAN4
config switch_vlan
	option device 'switch0'
	option vlan '5'
	option ports '2 6t'
